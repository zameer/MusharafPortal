@using Musharaf.Portal.Core.Blazor.Models.TenantViews;
@using Musharaf.Portal.Core.Blazor.Views.Components.ContainerComponents
<ContainerComponent 
    State="State">
    <Content>
        <TextBoxBase @ref=NameTextBox
                     Placeholder="Name"
                     @bind-Value=@TenantView.Name />
        <br />
        <TextBoxBase @ref=DescriptionTextBox
                     Placeholder="Description" />
        <br />

        <DropDownBase @ref=@TenantTypeDropDown
                      TEnum="TenantTypeView" />
        <br />

        <ButtonBase @ref=SubmitButton
                    Label="Submit Tenant"
                    OnClick=@CreateTenantAsync />
    </Content>
</ContainerComponent>