@inherits LayoutComponentBase

<MudThemeProvider />
<MudDialogProvider />
<MudSnackbarProvider />
<MudLayout>
    <MudAppBar>
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
        OSOS Central Hub (OCH)
    </MudAppBar>
    <MudDrawer @bind-Open="@_drawerOpen">
        <link href="https://use.fontawesome.com/releases/v5.14.0/css/all.css" rel="stylesheet">


        <MudPaper Width="250px" Class="d-inline-flex py-3" Elevation="0">
            <MudNavMenu Class="mud-width-full">
                <MudText Typo="Typo.h6" Class="px-4">OSOS</MudText>
                <MudText Typo="Typo.body2" Class="px-4 mud-text-secondary">Zameer</MudText>
                <MudDivider Class="my-2" />
                <MudNavLink Href="/dashboard" Icon="@Icons.Filled.Dashboard">Tenants</MudNavLink>
            </MudNavMenu>
        </MudPaper>
    </MudDrawer>
    <MudMainContent>
        <MudGrid Spacing="2">
            <MudItem xs="12">
                @Body
            </MudItem>
        </MudGrid>
    </MudMainContent>
</MudLayout>